<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Presence - Availabilities at a Glance</title>
        <link rel="stylesheet" type="text/css" media="all" href="/css/style.css" />
        <link rel="stylesheet" href="/css/chosen.css">
    </head>

    <body>

        <div id="centered">
            <div class="header">
              <ul class="title">
                  <h1><a href="{{ app.url_generator.generate('homepage') }}">&#x21F6; Presence</a></h1>
              </ul>
                
                <div class="additionalInformation">
                    <span class="infoBubble">
                        <a class="weekSwitch" href="{{ app.url_generator.generate("instruction") }}">Instructions</a>
                    </span>

                    <br class="hack" />

                </div>
                <div class="clearDiv"></div>
            </div>

            <article>

                <div class="side">
                    <section class="teams">
                        <h2>Teams</h2>

                        <ul class="teamList">
                            {% for team in teams %}
                                <li><a href="{{ app.url_generator.generate('availabilities', {'teamId': team.id}) }}">{{ team.name }}</a></li>
                            {% endfor %}
                        </ul>
                        
                    </section>

                </div>

                <section class="persons">

                    <h2>Persons</h2>

                    <select data-placeholder="Search..." id="chosen_teamofone" class="personsearch">
                        <option value=""></option>
                        {% for person in persons %}
                            <option value="{{ person.email }}">{{ person.name }}</option>
                        {% endfor %}
                    </select>

                    <ul class="personList">
                        {% for person in persons %}
                            <li><a href="{{ app.url_generator.generate('availabilities', {'teamId': person.id}) }}">{{ person.name }}</a></li>
                        {% endfor %}
                    </ul>

                </section>

            </article>
        </div>
        <script src="js/jquery.js" type="text/javascript"></script>
        <script src="js/chosen.jquery.js" type="text/javascript"></script>
        <script>
            $('#chosen_teamofone').chosen().change(function() {
            window.location = window.location.protocol + '//' + window.location.hostname + '/' + $(this).val();
            });
        </script>
    </body>
</html>
