<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Presence</title>
        <link rel="stylesheet" type="text/css" media="all" href="/css/style.css" />
        <link rel="stylesheet" href="/css/chosen.css">
    </head>

    <body>

        <div id="centered">
            <header>
                <h1>&#x21F6; Team availabilities</h1>
            </header>

            <article>


                <p>New here? Read the <a href="{{ app.url_generator.generate("instruction") }}">instructions</a>.</p>

                <h2>Persons</h2>

                <select id="chosen_teamofone">
                    <option value=""></option>
                    {% for email,person in persons %}
                        <option value="{{ email }}">{{ person.name }}</option>
                    {% endfor %}
                </select>

                <h2>Teams</h2>

                <ul class="teamList">
                    {% for teamId,team in teams %}
                        <li><a href="{{ app.url_generator.generate('availabilities', {'teamId': teamId}) }}">{{ team.name }}</a></li>
                    {% endfor %}
                </ul>

                </article>

            <footer>
                <a href="#centered">#top</a>
            </footer>
        </div>
            <script src="js/jquery.js" type="text/javascript"></script>
            <script src="js/chosen.jquery.js" type="text/javascript"></script>
            <script>
                $('#chosen_teamofone').chosen().change(function() {
                    window.location = window.location.protocol + '//' + window.location.hostname + '/' + $(this).val();
               });
           </script>
    </body>
</html>
